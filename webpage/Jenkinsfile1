pipeline {
    agent none

    parameters {
        string(name: 'REPO_URL', defaultValue: 'github.com/jcardogo/AlejandroCardoso_website.git', description: 'Git repository URL')
    }

    stages {
        stage('Clone Repository') {
            agent { label 'local' }
            steps {
                withCredentials([string(credentialsId: 'PAT', variable: 'PAT')]) {
                    git url: "https://jcardogo:${PAT}@${params.REPO_URL}"
                }
            }
        }
    }
}